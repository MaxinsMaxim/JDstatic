    <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body>
<!-- 顶部登录条 -->
<%- include common/top-login.ejs %>

<!-- 头部搜索区域 -->
<div id="header">
    <div class="w">
        <!-- logo -->
        <div id="logo">
            <div class="logo-tit">
                <a class="logo-bg" href="javascript:void 0;"></a>
            </div>
        </div>
        <!-- 搜索 -->
        <div id="search">
            <div class="search-m">
