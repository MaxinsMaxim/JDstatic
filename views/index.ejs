                    <input id="key" type="text" class="text">
                    <button type="button" class="button"><i class="fa fa-search"></i></button>
                </div>
            </div>
        </div>
        <!-- 购物车 -->
        <div id="shopCar" class="dropdown">
            <div class="cw-icon">
                <i class="fa fa-shopping-cart shop-icon"></i>
                <div class="shop-count">0</div>
                <a href="javascript:void 0;">我的购物车</a>
            </div>
            <div class="dropdown-layer">
                <div class="prompt">
                    <div class="nogoods"><b></b>购物车中还没有商品，赶紧选购吧！</div>
                </div>
            </div>
        </div>
        <!-- hotword -->
